  <sect1 id="charpick-introduction"> 
	 <title>Εισαγωγή</title> 
       <!-- ==== Figure ============================================= -->
	 <figure id="applet-fig"> 
		<title>Επιλογέας χαρακτήρων</title>
		<screenshot> 
		  <mediaobject><imageobject><imagedata fileref="figures/charpalette_applet.png" format="PNG"/> </imageobject> <textobject> <phrase>Επιλογέας χαρακτήρων</phrase> </textobject></mediaobject>
		</screenshot>
